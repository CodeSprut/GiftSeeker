{
  "name": "giftseeker",
  "version": "2.1.0",
  "author": "CodeSprut",
  "license": "MIT",
  "description": "Automatically join giveaways",
  "homepage": "https://giftseeker.ru/",
  "main": "src/electron/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeSprut/GiftSeeker.git"
  },
  "scripts": {
    "test": "jest",
    "start": "electron .",
    "build-win": "electron-builder --x64 --ia32",
    "build-nix": "electron-builder -l --x64 --ia32",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.giftseeker.app",
    "files": [
      "src",
      "node_modules",
      "LICENSE"
    ],
    "productName": "GiftSeeker",
    "artifactName": "${productName}Setup.${ext}",
    "copyright": "Copyright Â© 2020 ${author}",
    "linux": {
      "icon": "./src/resources/images/icon.ico"
    },
    "win": {
      "target": [
        "nsis-web",
        "portable"
      ],
      "icon": "./src/resources/images/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}.${ext}"
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "generic",
      "url": "https://giftseeker.ru/files"
    }
  },
  "devDependencies": {
    "electron": "^9.0.5",
    "electron-builder": "22.7.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "auto-launch": "5.0.5",
    "axios": "0.19.2",
    "node-html-parser": "1.2.19",
    "electron-json-storage": "4.1.8",
    "electron-updater": "4.2.0",
    "tippy.js": "5.2.0"
  }
}
