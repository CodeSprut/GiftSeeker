{
  "name": "GiftSeeker",
  "version": "1.2.0",
  "author": "CodeSprut",
  "license": "ISC",
  "description": "Steam raffles autojoiner",
  "homepage": "https://giftseeker.ru/",
  "main": "./src/electron.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --x64 --ia32",
    "build-nix": "electron-builder -l --x64 --ia32"
  },
  "build": {
    "appId": "com.giftseeker.app",
    "productName": "GiftSeeker",
    "artifactName": "${productName}Setup.${ext}",
    "copyright": "Copyright Â© 2019 ${author}",
    "linux": {
      "icon": "icon.ico"
    },
    "win": {
      "target": [
        "nsis-web",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "${productName}.${ext}"
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "generic",
      "url": "https://giftseeker.ru/files"
    }
  },
  "devDependencies": {
    "electron": "7.1.1",
    "electron-builder": "21.2.0",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-json-storage": "4.1.8",
    "electron-updater": "^4.0.6",
    "request": "^2.88.0",
    "request-promise": "4.2.5"
  }
}
