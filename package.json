{
  "name": "GiftSeeker",
  "version": "1.1.0",
  "author": "CodeSprut",
  "license": "ISC",
  "description": "Steam raffles autojoiner",
  "homepage": "https://giftseeker.ru/",
  "main": "giftseeker.js",
  "scripts": {
    "start": "electron .",
    "build-win": "build --x64 --ia32",
    "build-nix": "build -l --x64 --ia32"
  },
  "build": {
    "appId": "com.giftseeker.app",
    "productName": "GiftSeeker",
    "artifactName": "${productName}Setup.${ext}",
    "copyright": "Copyright Â© 2019 ${author}",
    "linux": {
      "icon": "icon.ico"
    },
    "win": {
      "target":
	  [
		"nsis-web",
		"portable"
	  ],
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "${productName}.${ext}"
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "generic",
      "url": "https://giftseeker.ru/files"
    }
  },
  "devDependencies": {
    "electron": "^3.0.11",
    "electron-builder": "^20.38.3"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-json-storage": "^4.1.5",
    "electron-updater": "^4.0.6",
    "request": "^2.88.0",
    "request-promise": "^4.2.2"
  }
}
