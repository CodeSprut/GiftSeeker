{
  "name": "giftseeker",
  "version": "2.0.0",
  "author": "CodeSprut",
  "license": "ISC",
  "description": "Steam raffles autojoiner",
  "homepage": "https://giftseeker.ru/",
  "main": "src/electron/app.js",
  "scripts": {
    "test": "jest",
    "start": "electron .",
    "build-win": "electron-builder --x64 --ia32",
    "build-nix": "electron-builder -l --x64 --ia32"
  },
  "build": {
    "appId": "com.giftseeker.app",
    "files": [
      "src",
      "node_modules"
    ],
    "productName": "GiftSeeker",
    "artifactName": "${productName}Setup.${ext}",
    "copyright": "Copyright Â© 2019 ${author}",
    "linux": {
      "icon": "./src/resources/images/icon.ico"
    },
    "win": {
      "target": [
        "nsis-web",
        "portable"
      ],
      "icon": "./src/resources/images/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}.${ext}"
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "generic",
      "url": "https://giftseeker.ru/files"
    }
  },
  "devDependencies": {
    "electron": "9.0.0",
    "jest": "26.1.0",
    "electron-builder": "22.7.0",
    "prettier": "1.19.1"
  },
  "dependencies": {
    "auto-launch": "5.0.5",
    "axios": "0.19.2",
    "node-html-parser": "1.2.19",
    "electron-json-storage": "4.1.8",
    "electron-updater": "4.2.0",
    "tippy.js": "5.2.0"
  }
}
