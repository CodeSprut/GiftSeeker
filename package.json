{
  "name": "GiftSeeker",
  "productName": "GiftSeeker",
  "version": "1.0.2",
  "description": "Steam raffles autojoiner",
  "main": "giftseeker.js",
  "devDependencies": {
    "electron": "^1.8.3",
    "electron-builder": "^20.4.0"
  },
  "dependencies": {
    "electron-json-storage": "^4.0.2",
    "request": "^2.85.0",
    "request-promise": "^4.2.2"
  },
  "author": "ES Soft",
  "license": "ISC",
  "scripts": {
    "start": "electron giftseeker.js",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "com.giftseeker.app",
    "linux": {
      "target": "deb",
      "icon": "icon.ico"
    },
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "${productName}.${ext}"
    }
  }
}
